# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm64/configs/(CHANGEME!)

pkgname=linux-oppo-r11
pkgver=4.4.153
pkgrel=1
pkgdesc="oppo r11 kernel fork"
arch="aarch64"
_carch="arm64"
_flavor="oppo-r11"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	bash
	ncurses-dev
	bc
	bison
	gcc6
	gcc
	devicepkg-dev
	findutils
	linux-headers
	flex
	openssl-dev
    installkernel
    gmp-dev
    elfutils-dev 
    build-base
    musl-dev
    libtirpc-dev
    gcc-aarch64-none-elf
    clang19-headers
    clang19-libclang
    clang19-libs
    clang19-static
    py3-clang19
	perl
"
	export OPPO_TARGET_DEVICE="MSM_16051"
# Source
_repository="android_kernel_oppo_r11"
_commit="51981b0c72de2870d22e6d2a338669a3185ad626"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/anruichan/$_repository/archive/$_commit.tar.gz
        $_config
        gcc10-extern_YYLOC_global_declaration.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"


prepare() {
	default_prepare
	REPLACE_GCCH=0
	. downstreamkernel_prepare
}

build() {
    make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" \
		"$_flavor" "$_outdir"
}

